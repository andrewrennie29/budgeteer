<p id="notice"><%= notice %></p>

<h1>Budget Periods</h1>

<table>
  <thead>
    <tr>
      <th>Period</th>
      <th>Days</th>
      <th>Frequency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_periods.each do |budget_period| %>
      <tr>
        <td><%= budget_period.period %></td>
        <td><%= budget_period.days %></td>
        <td><%= budget_period.frequency %></td>
        <td><%= link_to 'Show', budget_period %></td>
        <td><%= link_to 'Edit', edit_budget_period_path(budget_period) %></td>
        <td><%= link_to 'Destroy', budget_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

