<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= @budget.name %>  |  Monthly Budget <%= number_to_currency(@budget.monthly_value, precision: 2, unit: "£") %>   |   Remaining <%= number_to_currency(@budget.monthly_value - @expenses.sum(:value), precision: 2, unit: "£") %></h4>
    <h6 class="card-subtitle mb-2 text-muted"><%= @budget.budget_type.budget_type %>  |  <%= @budget.budget_period.period %>  |  <%= number_to_currency(@budget.value, precision: 2, unit: "£") %></h6>
    <p class="card-text">
    <table class="table table-striped">
  <thead>
    <tr>
      <th>Expense Date</th>
      <th>Category</th>
      <th>Comment</th>
      <th>Value</th>
      <th>Burndown</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_date %></th>
        <td><%= expense.expense_category.category %></td>
        <td><%= expense.comment %></td>
        <td><%= number_to_currency(expense.value, precision: 2, unit: "£") %></td>
        <td><% @burndown = @burndown - expense.value %>
        <%= number_to_currency(@burndown, precision: 2, unit: "£") %></td>
      </tr>
    <% end %>
  </tbody>
</table></p>
    <%= link_to 'Edit', edit_budget_path(@budget) %>  |  
    <%= link_to 'Back', budgets_path %>
  </div>
</div>



